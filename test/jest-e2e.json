  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/jest.setup.ts",
    "<rootDir>/01-users.e2e-spec.ts",
    "<rootDir>/02-sagas.e2e-spec.ts",
    "<rootDir>/03-episodes.e2e-spec.ts",
    "<rootDir>/04-comment.e2e-spec.ts",
    "<rootDir>/05-comment-reply.e2e-spec.ts",
    "<rootDir>/06-small-talk.e2e-spec.ts",
    "<rootDir>/07-purchase.e2e-spec.ts",
    "<rootDir>/08-view-log.e2e-spec.ts"
  ]
}
